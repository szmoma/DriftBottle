<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:onClick="onClick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#99000000"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rpz_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/ssp_bg"
                    android:textColor="#7a7c83"
                    android:drawablePadding="10dp"
                    android:text="@string/talk_bottle" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#f0f3f3" />

            <LinearLayout
                android:id="@+id/ll_02"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/ptp_bg"
                    android:textColor="#7a7c83"
                    android:drawablePadding="10dp"
                    android:text="@string/general_bottle" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#f0f3f3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_03"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="horizontal" >

                <TextView
                   android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/yxp_bg"
                    android:textColor="#7a7c83"
                    android:drawablePadding="10dp"
                    android:text="@string/guessing_game_bottle" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#f0f3f3" />

            <LinearLayout
                android:id="@+id/ll_04"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:onClick="onClick"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableTop="@drawable/jfp_bg"
                    android:textColor="#7a7c83"
                    android:drawablePadding="10dp"
                    android:text="@string/blasting_bottle" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>